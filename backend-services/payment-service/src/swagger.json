{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/payments/start": {
      "post": {
        "summary": "Start a payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" }
                },
                "required": ["amount"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Payment started"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/payments/{id}/status": {
      "get": {
        "summary": "Get payment status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment status"
          },
          "404": {
            "description": "Payment not found"
          }
        }
      }
    }
  }
}
